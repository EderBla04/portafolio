---
import Layout from '../layouts/Layout.astro';
import { getAllProjects } from '../lib/sanityClient.ts';

// Definir interfaz para proyectos
interface Project {
  _id: string;
  title: string;
  description: string;
  image: any;
  technologies: string[];
  category: string;
  status: string;
  featured: boolean;
  githubUrl: string;
  demoUrl?: string;
}

// Obtener proyectos de Sanity
let projects: Project[] = [];
let error: string | null = null;
let isConnectedToSanity = false;

try {
  projects = await getAllProjects() as Project[];
  // Verificar si los proyectos vienen de Sanity o son los de respaldo
  isConnectedToSanity = projects.length > 0 && typeof projects[0].image !== 'string';
} catch (e) {
  error = e instanceof Error ? e.message : 'Error desconocido';
}
