<!-- Bot贸n volver arriba -->
<button 
  id="back-to-top"
  class="fixed bottom-8 right-8 bg-blue-600/90 hover:bg-blue-700 text-white p-3 rounded-full shadow-lg backdrop-blur-sm border border-blue-500/30 transition-all duration-300 opacity-0 translate-y-4 hover:scale-110 hover:shadow-blue-500/25 hover:shadow-xl group"
  aria-label="Volver arriba"
>
  <svg class="w-5 h-5 group-hover:animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
  </svg>
  <div class="absolute inset-0 rounded-full bg-blue-400/20 animate-ping opacity-0 group-hover:opacity-100"></div>
</button>

<script>
  // Funcionalidad del bot贸n "volver arriba"
  document.addEventListener('DOMContentLoaded', function() {
    const backToTopButton = document.getElementById('back-to-top');
    let scrollTimer: ReturnType<typeof setTimeout> | null = null;
    
    // Mostrar/ocultar bot贸n seg煤n scroll con throttling
    window.addEventListener('scroll', () => {
      if (scrollTimer !== null) {
        clearTimeout(scrollTimer);
      }
      
      scrollTimer = setTimeout(() => {
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        
        if (scrollTop > 400) {
          backToTopButton?.classList.remove('opacity-0', 'translate-y-4');
          backToTopButton?.classList.add('opacity-100', 'translate-y-0');
        } else {
          backToTopButton?.classList.add('opacity-0', 'translate-y-4');
          backToTopButton?.classList.remove('opacity-100', 'translate-y-0');
        }
      }, 10);
    });
    
    // Funcionalidad del clic con feedback visual
    backToTopButton?.addEventListener('click', () => {
      // A帽adir efecto de clic
      backToTopButton.style.transform = 'scale(0.95)';
      setTimeout(() => {
        backToTopButton.style.transform = '';
      }, 150);
      
      // Scroll suave hacia arriba
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
    
    // Efecto de hint sutil cuando aparece por primera vez
    let hasShownHint = false;
    const observer = new IntersectionObserver((entries) => {
      if (!hasShownHint && window.pageYOffset > 600) {
        hasShownHint = true;
        // Peque帽a animaci贸n de introducci贸n
        setTimeout(() => {
          backToTopButton?.classList.add('animate-pulse');
          setTimeout(() => {
            backToTopButton?.classList.remove('animate-pulse');
          }, 2000);
        }, 1000);
      }
    });
    
    // Observar cuando el footer entra en viewport
    const footer = document.querySelector('footer');
    if (footer) {
      observer.observe(footer);
    }
  });
</script>
