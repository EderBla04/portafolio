<section id="home" class="min-h-screen flex items-center justify-center bg-gradient-to-br from-black via-blue-950 to-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="space-y-8">
      <!-- Imagen de perfil -->
      <div class="mx-auto w-48 h-48 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 p-1 overflow-hidden">
        <!-- El contenedor principal ahora tiene padding de 1 (p-1) y overflow hidden -->
        <div class="relative w-full h-full rounded-full overflow-hidden">
          <img 
            src="/images/profile/profile.jpg" 
            alt="Foto de perfil" 
            class="absolute w-full h-full object-cover"
            onload="this.style.display='block'; document.querySelector('.placeholder-icon').style.display='none';"
            onerror="this.style.display='none'; document.querySelector('.placeholder-icon').style.display='flex';"
          />
          <!-- Ícono de placeholder mejorado -->
          <div class="placeholder-icon absolute inset-0 flex items-center justify-center text-white">
            <svg class="w-20 h-20" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
            </svg>
          </div>
        </div>
      </div>
      </div>
      
      <!-- Nombre y título -->
      <div class="space-y-4">
        <h1 class="text-5xl md:text-7xl font-bold text-white">
          <span class="text-blue-400">Eder Gael</span> Blanco Alejandre
        </h1>
        <h2 class="text-xl md:text-2xl text-gray-300 font-light">
          Desarrollador Full Stack | Especialista en Web & Móvil
        </h2>
      </div>
      
      <!-- Descripción breve -->
      <p class="text-lg md:text-xl text-gray-400 max-w-3xl mx-auto leading-relaxed">
        Apasionado por crear soluciones tecnológicas innovadoras.
        Especializado en desarrollo web y móvil moderno con experiencia en Flutter, frontend y backend.
      </p>
      
      <!-- Botones de acción -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="#projects" 
          class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-medium transition-colors duration-300"
